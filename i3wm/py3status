# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "pomodoro"
order += "volume master"
order += "tztime local"

volume master {
        format = "Vol %volume"
        format_muted = "Muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
tztime local {
        format = "%H:%M:%S %d-%m-%Y"
}

pomodoro {
		# pomodoro
		pomodoros = 100
		timer_pomodoro = 3000
		timer_break = 600
		timer_long_break = 600

		# format
		format = "{mmss}"
		
		format_active = "Pomodoro #{breakno} [{format}]"
		format_stopped = "Pomodoro #{breakno} ({format})"
		
		format_break = "Break [{format}]"
		format_break_stopped = "Break ({format})"
		
		# color
		color_bad = '#ffffff'
		
		# sound
		sound_pomodoro_start = "~/Music/pomodoro/button-press.wav"
		sound_pomodoro_end = "~/Music/pomodoro/alarm.wav"
		sound_break_end = "~/Music/pomodoro/alarm.wav"
		
		
}
